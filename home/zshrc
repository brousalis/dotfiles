ZSH="$HOME/.oh-my-zsh"
ZSH_CUSTOM="$HOME/dotfiles/custom"
ZSH_THEME="pete"

setopt auto_cd
setopt auto_pushd
setopt prompt_subst
setopt histignoredups
autoload -Uz compinit && compinit

source $ZSH/oh-my-zsh.sh

[[ -f "~/.localrc" ]] && . "~/.localrc"

for file in ~/.{aliases,exports}; do
  [[ -f "$file" ]] && source "$file";
done
