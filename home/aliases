#!/usr/bin/env bash

alias ..='cd ..'
alias ...='cd ../..'
alias ls='ls -lah'
alias ll='ls -lth'
alias g='git'
alias ga='git add'
alias gs='git status -s'
alias gco='git checkout'
alias gp='git push' 
function gre() { git fetch origin; git checkout master; git branch -D "$@"; git checkout -t origin/"$@" }
alias gbd='git branch -D'
alias grs='git reset --hard HEAD'
alias gc='git commit'
alias gct='git commit -t'
alias grm='git ls-files --deleted | xargs git rm'
alias undopush='git push -f origin HEAD^:master'
alias undocommit='git reset --soft HEAD~1'
alias h='cd ~'
alias home='cd ~'
alias dotfiles='cd ~/.dotfiles'
alias dev="cd ~/dev/"
alias nom='rm -rf node_modules && npm cache clean && npm install'
alias rmnm="find . -name 'node_modules' -exec rm -rf '{}' +"
alias rpsql='rm /usr/local/var/postgres/postmaster.pid'
alias server='open http://localhost:1337 && python -m SimpleHTTPServer 1337'
alias fs="stat -f '%z bytes'"
alias df='df -h'
alias ifi="ifconfig | ack 'net'"
alias ip='dig +short myip.opendns.com @resolver1.opendns.com'
alias untar='tar -xvvf'
alias reload='exec $SHELL -l'
alias emptytrash='sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash; sudo rm -rfv /private/var/log/asl/*.asl'
alias dsremove='find . -name .DS_Store -print0 | xargs -0 git rm --ignore-unmatch'
alias dsremover='find . -name .DS_Store -print0 | xargs -0 rm'
alias dsr='find . -name ".DS_Store" -depth -exec rm {} \;'
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"
alias flush="sudo dscacheutil -flushcache"